<% if current_user.first_name == nil %>
<span class="menu-label"><strong><% provide(:title, @user.name) %></strong></span>
<% else %>
<span class="menu-label"><strong><% provide(:title, @user.full_name) %></strong></span>
<% end %>

<div class="profile card" align="center">

  <h1 class="card-header profile-header">
    <% if current_user.first_name == nil %>
    <span class="menu-label"><strong><%= current_user.name %></strong></span>
    <% else %>
    <span class="menu-label"><strong><%= current_user.full_name %></strong></span>
    <% end %>
  </h1>
  <%= gravatar_for @user, size: "300px"; %>
  <hr>

  <!-- TODO display more user demographics and information -->

  <ul style="list-style-type:none">
    <li><p><%= @user.email %></p></li>

    <% if @user.city && @user.state != nil %>
      <li><p>Located in: <a target="_blank" href="https://www.google.com/maps/place/<%= @user.city %>, <%= @user.state %>"><%= @user.city + ", " + @user.state %></a></p></li>
    <% else %>
      <%= @user.city || @user.state %>
    <% end %>

    <li><p><%= @user.about %></p></li>
    <li><p><%= @user.interests %></p></li>
  </ul>

  <% if @user == current_user %>
  <%= link_to "Edit Info", edit_user_registration_path, class: "new-buttons" %>
  <% end %>

</div>
